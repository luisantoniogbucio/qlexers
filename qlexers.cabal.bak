cabal-version:      2.4
name:               qlexers
version:            0.1.0.0
author:             Your Name
maintainer:         your.email@example.com
synopsis:           Lexical Analyzer for IMP language

executable qlexers
    main-is:          Main.hs
    other-modules:    RegEx
                    , Thompson
                    , Automata
                    , Minimizar
                    , MDD
                    , Lexer
    build-depends:    base >=4.18 && <5
                    , text
                    , containers
                    , mtl
    hs-source-dirs:   src
    default-language: Haskell2010
    ghc-options:      -Wall -Wno-unused-imports

test-suite qlexers-tests
    type:             exitcode-stdio-1.0
    main-is:          Tests.hs
    build-depends:    base >=4.18 && <5
                    , qlexers
                    , hspec
                    , QuickCheck
    hs-source-dirs:   tests
    default-language: Haskell2010
